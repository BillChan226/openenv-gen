{
  "name": "ebay-web-frontend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 5173 --strictPort",
    "dev:3000": "vite --host 0.0.0.0 --port 3000 --strictPort",
    "build": "vite build",
    "preview": "vite preview --host 0.0.0.0 --port 5173 --strictPort",
    "lint": "eslint .",
    "pretest:e2e": "node -e \"const fs=require('fs'); const p=['test-results','playwright-report']; for (const d of p){ try{ fs.rmSync(d,{recursive:true,force:true}); }catch(e){} }\"",
    "test:e2e": "npm run pretest:e2e && playwright test -c playwright.config.ts",
    "test:e2e:ui": "npm run pretest:e2e && playwright test -c playwright.config.ts --ui",
    "test:e2e:report": "playwright show-report", 
    "test:e2e:qa": "node ./scripts/qa-e2e.mjs",
    "test:smoke:http": "node ./scripts/smoke-http.mjs",
    "test:verify": "npm run test:smoke:http && npm run test:e2e:qa"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-popover": "^1.1.2",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-tooltip": "^1.1.3",
    "clsx": "^2.1.1",
    "lucide-react": "^0.400.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@playwright/test": "^1.49.1",
    "@axe-core/playwright": "^4.10.2", 
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.12.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "vite": "^5.4.10"
  }
}
