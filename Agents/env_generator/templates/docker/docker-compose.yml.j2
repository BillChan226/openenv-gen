# {{ env_name }} Docker Compose Configuration
# Auto-generated by EnvGenerator Multi-Agent System

version: "3.8"

services:
  # PostgreSQL Database
  db:
    image: postgres:15-alpine
    container_name: {{ env_name }}-db
    environment:
      POSTGRES_USER: {{ db_user | default('postgres') }}
      POSTGRES_PASSWORD: {{ db_password | default('postgres') }}
      POSTGRES_DB: {{ db_name | default(env_name) }}
    volumes:
      - postgres_data:/var/lib/postgresql/data
    ports:
      - "{{ db_port | default(5432) }}:5432"
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U {{ db_user | default('postgres') }}"]
      interval: 10s
      timeout: 5s
      retries: 5

  # Backend API
  api:
    build:
      context: ./{{ env_name }}_api
      dockerfile: Dockerfile
    container_name: {{ env_name }}-api
    environment:
      DATABASE_URL: postgresql://{{ db_user | default('postgres') }}:{{ db_password | default('postgres') }}@db:5432/{{ db_name | default(env_name) }}
      SECRET_KEY: {{ secret_key | default('change-me-in-production') }}
      DEBUG: "false"
    ports:
      - "{{ api_port | default(8000) }}:{{ api_port | default(8000) }}"
    depends_on:
      db:
        condition: service_healthy
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:{{ api_port | default(8000) }}/health"]
      interval: 30s
      timeout: 10s
      retries: 3

  # Frontend UI
  ui:
    build:
      context: ./{{ env_name }}_ui
      dockerfile: Dockerfile
    container_name: {{ env_name }}-ui
    environment:
      VITE_API_URL: http://localhost:{{ api_port | default(8000) }}/api/v1
    ports:
      - "{{ ui_port | default(3000) }}:80"
    depends_on:
      - api

  # OpenEnv Adapter (for RL training)
  openenv:
    build:
      context: .
      dockerfile: Dockerfile.openenv
    container_name: {{ env_name }}-openenv
    environment:
      API_BASE_URL: http://api:{{ api_port | default(8000) }}
    ports:
      - "{{ openenv_port | default(8080) }}:{{ openenv_port | default(8080) }}"
    depends_on:
      api:
        condition: service_healthy
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:{{ openenv_port | default(8080) }}/health"]
      interval: 30s
      timeout: 10s
      retries: 3

volumes:
  postgres_data:

networks:
  default:
    name: {{ env_name }}-network

